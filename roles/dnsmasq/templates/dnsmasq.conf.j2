user=nobody
keep-in-foreground
log-facility=-

listen-address={{net}}.0.1
{% if net == "10.2" %}
listen-address=127.0.0.1
{% endif %}
bind-interfaces

domain-needed
no-resolv
server=208.201.224.11
server=208.201.224.33
server=8.8.4.4
server=8.8.8.8
local=/bigasterisk.com/
no-hosts
addn-hosts=/opt/dnsmasq/hosts
local-ttl=30
mx-host=bigasterisk.com,prime6.bigasterisk.com
cache-size=10000
neg-ttl=60

{% if net == "10.1" %}
dhcp-broadcast
dhcp-authoritative
dhcp-option=option:domain-name,bigasterisk.com
dhcp-hostsfile=/opt/dnsmasq/dhcp_hosts
dhcp-leasefile=/opt/dnsmasq/leases
dhcp-range=enp1s0,10.1.0.100,10.1.0.140
dhcp-option=enp1s0,option:dns-server,10.1.0.1
dhcp-option=enp1s0,option:router,10.1.0.1
log-dhcp
{% endif %}

{% if net == "10.2" %}
dhcp-broadcast
dhcp-authoritative
dhcp-option=option:domain-name,bigasterisk.com
dhcp-hostsfile=/opt/dnsmasq/dhcp_hosts
dhcp-leasefile=/opt/dnsmasq/leases
dhcp-range=ens6,10.2.0.21,10.2.0.80
dhcp-option=ens6,option:dns-server,10.2.0.1
dhcp-option=ens6,option:router,10.2.0.1
log-dhcp
{% endif %}